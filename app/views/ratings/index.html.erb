<h1>Ratings</h1>

<% cache 'ratings_page', expires_in:5.minutes do %>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h4>Best beers</h4>
      <%= render "top", top_object: @top_beers, title: "Beer" %>
    </div>
    <div class="col">
      <h4>Best breweries</h4>
      <%= render "top", top_object: @top_breweries, title: "Brewery" %>
    </div>
    <div class="col">
      <h4>Best styles</h4>
      <%= render "top", top_object: @top_styles, title: "Style" %>
    </div>
  </div>
</div>

<h4>Most active users</h4>
<ol>
<% @top_users.each do |user| %>
  <li> <%= user.username %> <%= user.ratings.count %> ratings </li>
<% end %>
</ol>

<h4>Recent ratings</h4>
<ul>
 <% @recent.each do |rating| %>
   <li> <%= render rating %> </li>
 <% end %>
</ul>
<% end %>

<%= link_to "New rating", new_rating_path, class:'btn btn-primary' %>