<% cache beer do %>

<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= link_to beer.name, beer %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style.name %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

  <p>
    <% if beer.ratings.empty? %>
    <% else %>
      Beer has <%= pluralize(beer.ratings.size, "rating") %> with an average of <%= beer.average_rating%>
    <% end %>
  </p>

</div>

<% end %>